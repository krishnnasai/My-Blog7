<!DOCTYPE html>
<html>
  <head>
    <title>MyBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
     
     <body>
    <nav class="navbar navbar-default">
      <div class="container">
          <a class="navbar-brand">
          <%= link_to "Blog",root_path, class: "btn btn-default" %></a>
        <% if user_signed_in? %>
         <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "New Post", new_post_path, class: "btn btn-default" %></li>
          <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-default" %></li>
        </ul> 
        <% end %>
      </div>   
    </nav>
      <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p> 
  <body>
    <%= yield %>
  </body>
</html>
